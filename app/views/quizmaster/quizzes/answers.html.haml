.big-box
  %h1= @question.body
  %h3= @question.answer
  %hr/

  .answers
    - @question.answers.each_with_index do |answer, index|
      #answer{id: index}
        = answer.body
        = link_to image_tag('x-box.png', class: 'square-button'), "/quizmaster/quiz/answers/mark/#{answer.id}?correct=false", id: "wrong", remote: true
        = link_to image_tag('check-box.png', class: 'square-button'), "/quizmaster/quiz/answers/mark/#{answer.id}?correct=true", id: "right", remote: true
      %br/
      %br/
      %hr/
